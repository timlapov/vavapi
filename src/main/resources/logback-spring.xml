<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Подключаем базовую конфигурацию логирования Spring Boot -->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- Читаем путь к логам из application.properties -->
    <springProperty scope="context" name="LOG_PATH" source="logging.file.path" defaultValue="logs"/>

    <!--
    Определяем новый "аппендер" (обработчик) для аудиторских логов.
    Он будет создавать файл audit.log и управлять его ротацией.
    -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/audit.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>1MB</maxFileSize>    <!-- Максимальный размер файла, как у вас в properties -->
            <maxHistory>30</maxHistory>       <!-- Хранить архивы 30 дней -->
            <totalSizeCap>1GB</totalSizeCap>  <!-- Общий размер архивов не более 1 ГБ -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level AUDIT - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Определяем сам логгер с именем "audit" -->
    <logger name="audit" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_FILE" />
    </logger>

</configuration>